<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MenuPrincipal"
    android:id="@+id/layoutMenu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quien Libre"
        android:textSize="100px"
        android:textColor="@color/material_blue_grey_800"
        android:layout_marginTop="100px"
        android:layout_centerHorizontal="true"
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:text="Buscar Disponibles"
        android:id="@+id/botDisp"
        android:onClick="viewDisp"
        android:textAllCaps="false"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/botDisp"
        android:text="Agregar persona"
        android:id="@+id/botPer"
        android:onClick="agregarPersona"
        android:textAllCaps="false"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/botPer"
        android:text="Cambiar Trimestre"
        android:id="@+id/botCam"
        android:onClick="cambTrim"
        android:textAllCaps="false"
        />


</RelativeLayout>
