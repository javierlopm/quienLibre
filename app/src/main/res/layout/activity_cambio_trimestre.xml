<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.ddns.javierlopm.quienlibre.CambioTrimestre">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione el trimestre actual"
        android:layout_centerHorizontal="true"
        android:textColor="#0288D1"
        android:textSize="80px"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spTrimestre"
        android:layout_marginLeft="20px"
        android:layout_centerVertical="true"
        android:backgroundTint="#0288D1"
        android:backgroundTintMode="multiply"

    />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/anioActual"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20px"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Realizar modificaciÃ³n"
        android:id="@+id/botActualizarTrim"
        android:onClick="actTrim"
        android:layout_below="@+id/anioActual"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        />


</RelativeLayout>
